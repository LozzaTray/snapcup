{
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "./src",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "esModuleInterop": true,
        "paths": {
            "~*": ["./*"]
        },
        "plugins": [
            {
                "transform": "ts-auto-mock/transformer",
                "cacheBetweenTests": false
            }
        ]
    },
    "include": ["src/**/*"]
}
